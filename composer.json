{
  "name": "Anord/palmpesa-payment",
  "description": "A Laravel package for handling PalmPesa payments including USSD Push and Pay-by-Link.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Anord Amri Mwinuka",
      "email": "anoldmwinuka@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "illuminate/support": "^8.0|^9.0|^10.0"
  },
  "autoload": {
    "psr-4": {
      "PalmPesa\\Payment\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "PalmPesa\\Payment\\PalmPesaServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
